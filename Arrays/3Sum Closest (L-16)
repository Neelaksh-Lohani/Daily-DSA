#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    int threeSumClosest(vector<int>& arr, int target) {
        sort(arr.begin(), arr.end());
        int n = arr.size();

        int closestSum = arr[0] + arr[1] + arr[2]; // initial guess

        for (int i = 0; i < n - 2; ++i) {
            int left = i + 1;
            int right = n - 1;

            while (left < right) {
                int currentSum = arr[i] + arr[left] + arr[right];

                // Update closestSum if this is closer to target
                if (abs(target - currentSum) < abs(target - closestSum)) {
                    closestSum = currentSum;
                }

                if (currentSum == target) {
                    return currentSum; // perfect match
                } 
                else if (currentSum < target) {
                    left++;
                } 
                else {
                    right--;
                }
            }
        }
        return closestSum;
    }
};
