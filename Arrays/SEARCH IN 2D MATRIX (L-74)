class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        int rows = matrix.size();
        int coloumns = matrix[0].size();
        // Total elements
        int n = rows * coloumns;

        int s = 0;
        int e = n-1;
        int mid = s + (e-s)/2;

        while(s<=e){
           int rowIndex = mid/coloumns;
           int colIndex =  mid%coloumns;

           if(matrix[rowIndex][colIndex]==target){
            return true;
           } else if(target> matrix[rowIndex][colIndex]){
            s = mid+1;
           } else{
            e = mid-1;
           }
           mid = s + (e-s)/2;
        }
        return false;
    }
};
